" Plugin
call plug#begin('~/.vim/plugged')
    Plug 'cocopon/iceberg.vim'
call plug#end()

" Iceberg (theme)
syntax on
set t_Co=256
colorscheme iceberg
set background=dark
if exists('+termguicolors')
  let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
  let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"
  set termguicolors
endif
